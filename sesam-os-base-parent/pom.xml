							<property>
								<name>maven.test.class.path</name>
								<value>${project.testClasspathElements}</value>
							</property>
						</systemProperties>
					</configuration>
	            </plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
