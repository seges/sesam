				</plugin>
				<plugin>
					<artifactId>maven-resources-plugin</artifactId>
					<version>${maven-resources-plugin.version}</version>
					<configuration>
						<encoding>UTF-8</encoding>
					</configuration>
				</plugin>
	
				<!-- JSR-269 Annotation Processing -->
				<plugin>
					<groupId>org.bsc.maven</groupId>
					<artifactId>maven-processor-plugin</artifactId>
					<version>${maven-processor-plugin.version}</version>
					<configuration>
						<!-- source output directory -->
						<outputDirectory>${jsr269.generated.dir}</outputDirectory>
						<compilerArguments>-encoding utf-8 -nowarn</compilerArguments> 
						
						<options>
							<classpath>${project.compileClasspathElements}</classpath>
							<testClasspath>${project.testClasspathElements}</testClasspath>
							<projectName>${project.artifactId}:${project.groupId}</projectName>
						</options>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<version>${build-helper-maven-plugin.version}</version>
					<configuration>
						<sources>
							<source>${jsr269.generated.dir}</source>
						</sources>
					</configuration>
				</plugin>				
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-source-plugin</artifactId>
					<version>${maven-source-plugin.version}</version>
					<executions>
						<execution>
							<id>attach-sources</id>
							<phase>verify</phase>
							<goals>
								<goal>jar</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>${maven-jar-plugin.version}</version>
				</plugin>
				<!-- http://jira.codehaus.org/browse/MWAR-187 -->
	                        <plugin>
